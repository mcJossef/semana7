<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/index.css">
    <title>Editar Insumo</title>
</head>
<body>
    <nav class="navbar navbar-expand navbar-light bg-faded">
        <div class="container">
            <a class="navbar-brand" href="/">Tarea semana 6</a>
            <ul class="navbar-nav me-auto mt-2 mt-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" href="/">Clientes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/proveedor">Proveedores</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/insumo">Insumos</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-5">
        <h2>Editar Insumo</h2>
        <form action="/insumo/actualizar/<%= insumo._id %>" method="POST">
            <div class="mb-3">
                <label for="nominsumo" class="form-label">Nombre del Insumo</label>
                <input type="text" class="form-control" id="nominsumo" name="nominsumo" value="<%= insumo.nominsumo %>" required>
            </div>
            <div class="mb-3">
                <label for="idprovedor" class="form-label">Proveedor</label>
                <select class="form-control" id="idprovedor" name="idprovedor" required>
                    <% proveedores.forEach(function(proveedor) { %>
                        <option value="<%= proveedor._id %>" <%= insumo.idprovedor.equals(proveedor._id) ? 'selected' : '' %>><%= proveedor.nombrecia %></option>
                    <% }) %>
                </select>
            </div>
            <div class="mb-3">
                <label for="preUni" class="form-label">Precio Unitario</label>
                <input type="number" class="form-control" id="preUni" name="preUni" value="<%= insumo.preUni %>" required>
            </div>
            <div class="mb-3">
                <label for="stock" class="form-label">Stock</label>
                <input type="number" class="form-control" id="stock" name="stock" value="<%= insumo.stock %>" required>
            </div>
            <button type="submit" class="btn btn-primary">Actualizar Insumo</button>
        </form>
    </div>
</body>
</html>
